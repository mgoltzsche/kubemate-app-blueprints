apiVersion: kpt.dev/v1
kind: Kptfile
metadata:
  name: webapp
  annotations:
    config.kubernetes.io/local-config: "true"
info:
  description: webapp example
pipeline:
  # YAML transformation to replace app and image name
  # within kustomization.yaml and skaffold.yaml
  mutators:
  - image: gcr.io/kpt-fn/apply-setters:v0.2.0
    configPath: ./setter-fn-config.yaml
